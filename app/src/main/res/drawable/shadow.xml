<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#20000000"
                /> <!-- Warna shadow dengan transparansi -->
            <corners android:radius="8dp"/> <!-- Radius sudut untuk shadow -->
        </shape>
    </item>
    <!-- Layer untuk background -->
    <item android:right="0dp" android:left="0dp" android:top="0dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/white"/> <!-- Warna background -->
            <corners android:radius="8dp"/>
        </shape>
    </item>
</layer-list>