<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Result">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:background="@drawable/edittext_background"
        android:alpha="0.8"
        tools:ignore="MissingConstraints">
    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:textColor="#466CB6"
            android:text="Result"
            android:textSize="32dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="40dp"
            android:id="@+id/Result"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Zulfiana Aulia Syafa"
            android:fontFamily="@font/poppins_medium"
            android:textColor="#466CB6"
            android:textSize="20dp"
            android:id="@+id/nama"
            android:layout_marginTop="40dp"
            android:layout_marginHorizontal="30dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="22515040111020"
            android:fontFamily="@font/poppins_medium"
            android:textColor="#466CB6"
            android:textSize="20dp"
            android:id="@+id/nim"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="30dp"
            app:layout_constraintTop_toBottomOf="@id/nama"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hasil :"
            android:fontFamily="@font/poppins_medium"
            android:textColor="#466CB6"
            android:textSize="30dp"
            android:id="@+id/world"
            android:layout_marginTop="30dp"
            android:layout_marginHorizontal="30dp"
            app:layout_constraintTop_toBottomOf="@id/nim"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:textColor="#466CB6"
            android:textSize="19dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="0dp"
            android:id="@+id/hasil"
            android:text="Hasil operasi akan ditampilkan di sini" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:fontFamily="@font/poppins_medium"
            android:textColor="#FFFFFF"
            android:backgroundTint="#466CB6"
            android:textSize="16dp"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="150dp"
            android:id="@+id/btn_kembali">
        </Button>




    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>